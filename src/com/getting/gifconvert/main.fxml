<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.NotificationPane?>
<?import org.controlsfx.control.RangeSlider?>
<?import org.controlsfx.control.StatusBar?>
<?import org.controlsfx.control.ToggleSwitch?>
<NotificationPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0"
                  xmlns="http://javafx.com/javafx/8"
                  fx:controller="com.getting.gifconvert.MainController" fx:id="notificationPane" showFromTop="false">
    <content>

        <BorderPane>

            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <Menu text="文件">
                        <MenuItem onAction="#onChooseVideo" text="打开">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP"
                                                    shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>

                        <MenuItem onAction="#onOpenSaveDirectory" text="打开输出文件夹">
                        </MenuItem>
                    </Menu>
                    <Menu text="编辑">
                        <CheckMenuItem text="反序输出" fx:id="reverseGifView">
                        </CheckMenuItem>
                        <CheckMenuItem text="添加时间水印" fx:id="addLogoView">
                        </CheckMenuItem>
                    </Menu>
                </MenuBar>
            </top>

            <center>
                <BorderPane BorderPane.alignment="CENTER">
                    <center>
                        <ImageView fx:id="gifPreviewView" fitHeight="450.0" fitWidth="700.0" pickOnBounds="true"
                                   preserveRatio="true" BorderPane.alignment="CENTER">
                        </ImageView>
                    </center>

                    <right>
                        <VBox>
                            <Label text="帧率："/>
                            <Slider showTickMarks="true" fx:id="gifFrameRateView"
                                    showTickLabels="true" min="1" max="25" minorTickCount="2" value="7"
                                    majorTickUnit="5"/>

                            <Label prefHeight="30"/>

                            <Label text="缩放："/>
                            <Slider showTickMarks="true"
                                    fx:id="gifScaleView" value="1"
                                    showTickLabels="true" min="0.1" max="1"
                                    majorTickUnit="0.3"/>

                            <BorderPane.margin>
                                <Insets left="10.0" right="10.0" top="50"/>
                            </BorderPane.margin>
                        </VBox>
                    </right>

                    <bottom>
                        <BorderPane BorderPane.alignment="CENTER" fx:id="inputVideoDurationPane" visible="false">
                            <center>
                                <BorderPane BorderPane.alignment="CENTER">
                                    <center>
                                        <RangeSlider fx:id="inputVideoDurationView" showTickMarks="true"
                                                     minorTickCount="5"
                                                     showTickLabels="true"
                                                     BorderPane.alignment="CENTER">

                                            <BorderPane.margin>
                                                <Insets left="10.0" right="10.0"/>
                                            </BorderPane.margin>
                                        </RangeSlider>
                                    </center>

                                    <left>
                                        <Label fx:id="inputVideoStartTimeView"/>
                                    </left>

                                    <right>
                                        <Label fx:id="inputVideoEndTimeView"/>
                                    </right>
                                </BorderPane>
                            </center>

                            <right>
                                <ToggleSwitch fx:id="videoDurationDetailView" text="微调">
                                    <BorderPane.margin>
                                        <Insets left="30.0" right="30.0"/>
                                    </BorderPane.margin>
                                </ToggleSwitch>
                            </right>

                            <BorderPane.margin>
                                <Insets bottom="10.0" left="60.0" right="60.0" top="10.0"/>
                            </BorderPane.margin>
                        </BorderPane>
                    </bottom>
                </BorderPane>
            </center>

            <bottom>
                <StatusBar BorderPane.alignment="CENTER" text="" fx:id="statusBar">
                    <leftItems>
                        <Label fx:id="videoInfoView"/>
                    </leftItems>
                </StatusBar>
            </bottom>

        </BorderPane>

    </content>
</NotificationPane>